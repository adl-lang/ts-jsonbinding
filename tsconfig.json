{
    "compilerOptions": {
      "target": "es2022",
      "module": "es2022",
      "outDir": "dist",
      "declaration": true,
      "noImplicitAny": true,
      "allowJs": true,
      "moduleResolution": "bundler",
      "strict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["./src"]
}
